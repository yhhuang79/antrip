<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@android:drawable/alert_light_frame"
	android:orientation="horizontal">
	
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/angry"
			android:text="Angry"
			android:minWidth="80dp"
			android:minHeight="40dp"
			 />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/nervous"
			android:text="Nervous"
			android:minWidth="80dp"
			android:minHeight="40dp"
			 />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/bored"
			android:text="Bored"
			android:minWidth="80dp"
			android:minHeight="40dp"
			 />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sad"
			android:text="Sad"
			android:minWidth="80dp"
			android:minHeight="40dp"
			 />
    </LinearLayout>
	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/excited"
			android:text="Excited"
			android:minWidth="80dp"
			android:minHeight="40dp"
			 />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/calm"
			android:text="Calm"
			android:minWidth="80dp"
			android:minHeight="96dp"
			 />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sleepy"
			android:text="Sleepy"
			android:minWidth="80dp"
			android:minHeight="40dp"
			 />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/happy"
			android:text="Happy"
			android:minWidth="80dp"
			android:minHeight="40dp"
			 />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/pleased"
			android:text="Pleased"
			android:minWidth="80dp"
			android:minHeight="40dp"
			 />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/relaxed"
			android:text="Relaxed"
			android:minWidth="80dp"
			android:minHeight="40dp"
			 />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/peaceful"
			android:text="Peaceful"
			android:minWidth="80dp"
			android:minHeight="40dp"
			 />
    </LinearLayout>
</LinearLayout>
