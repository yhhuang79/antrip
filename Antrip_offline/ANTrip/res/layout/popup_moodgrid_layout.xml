<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@android:drawable/alert_light_frame"
	android:orientation="vertical">
	
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:src="@drawable/mood_angry"
			android:background="@color/background_state"
			android:layout_margin="3dip"
			android:tag="10"/>
		<ImageView
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:src="@drawable/mood_nervous"
			android:background="@color/background_state"
			android:layout_margin="3dip"
			android:tag="9"/>
		<ImageView
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:src="@drawable/mood_bored"
			android:background="@color/background_state"
			android:layout_margin="3dip"
			android:tag="8"/>
		<ImageView
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:src="@drawable/mood_sad"
			android:background="@color/background_state"
			android:layout_margin="3dip"
			android:tag="7"/>
    </LinearLayout>
	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:src="@drawable/mood_excited"
			android:background="@color/background_state"
			android:layout_margin="3dip"
			android:tag="1"/>
		<ImageView
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:src="@drawable/mood_calm"
			android:background="@color/background_state"
			android:layout_margin="3dip"
			android:tag="11"/>
		<ImageView
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:src="@drawable/mood_sleepy"
			android:background="@color/background_state"
			android:layout_margin="3dip"
			android:tag="6"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:src="@drawable/mood_happy"
			android:background="@color/background_state"
			android:layout_margin="3dip"
			android:tag="2"/>
		<ImageView
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:src="@drawable/mood_pleased"
			android:background="@color/background_state"
			android:layout_margin="3dip"
			android:tag="3"/>
		<ImageView
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:src="@drawable/mood_relaxed"
			android:background="@color/background_state"
			android:layout_margin="3dip"
			android:tag="4"/>
		<ImageView
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:src="@drawable/mood_peaceful"
			android:background="@color/background_state"
			android:layout_margin="3dip"
			android:tag="5"/>
    </LinearLayout>
</LinearLayout>
